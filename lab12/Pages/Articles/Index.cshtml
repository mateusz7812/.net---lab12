@page
@model lab12.Pages_Articles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Articles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Category)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @if(item.ImageName is null){
                    <img height="60px" src="~/image/placeholder.jpg" />

                }else{
                    <img height="60px" src="~/upload/@item.ImageName" />
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ArticleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ArticleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ArticleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
